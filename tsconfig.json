{
	"compilerOptions": {
		"incremental": true,
		"target": "esnext",
		"module": "commonjs",
		"sourceMap": true,
		"declaration": true,
		"outDir": "dist",
		"strict": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	
	"include": [
		"src/**/*.ts",
		"test/**/*.ts"
	]
}
